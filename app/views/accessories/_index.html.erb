<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>amount</th>
      <th colspan="3"></th>
      <th class="text-md-center"><%= link_to new_reserf_garrison_accessory_path(@reserve, @garrison) do %><span class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></span><% end %></th>
    </tr>
  </thead>

  <tbody>
    <% @accessories.each do |accessory| %>
      <tr>
        <td><%= accessory.description %></td>
        <td><%= accessory.amount %></td>
        <td>
          <%= link_to reserf_garrison_accessory_path(@reserve, @garrison, accessory) do %><div class="btn btn-info"><i class="fa fa-info" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to edit_reserf_garrison_accessory_path(@reserve, @garrison, accessory) do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to reserf_garrison_accessory_path(@reserve, @garrison, accessory), method: :delete, data: { confirm: 'Are you sure?' }  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
