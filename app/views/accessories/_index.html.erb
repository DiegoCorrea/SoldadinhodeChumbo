<div class="text-md-right"><%= link_to new_reserf_garrison_accessory_path(@reserve, @garrison) do %><span class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></span><% end %></div>

<% @accessories.each do |accessory| %>
  <div class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Quantidade: </strong><%= accessory.amount %></li>
      <li class="list-group-item"><strong>Descrição: </strong><%= accessory.description %></li>
    </ul>
    <div class="card-block">
      <%= link_to edit_reserf_garrison_accessory_path(@reserve, @garrison, accessory), class: "col-md-6" do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %>
      <%= link_to reserf_garrison_accessory_path(@reserve, @garrison, accessory), method: :delete, data: { confirm: 'Are you sure?' }, class: "col-md-6"  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %>
    </div>
  </div>
<% end %>