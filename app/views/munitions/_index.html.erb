<div class="text-md-center"><%= link_to new_reserf_garrison_munition_path(@reserve, @garrison) do %><span class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></span><% end %></div>

<% @munitions.each do |munition| %>
  <div class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Calibre: </strong><%= munition.caliber %></li>
      <li class="list-group-item"><strong>Quantidade: </strong><%= munition.amount %></li>
      <li class="list-group-item"><strong>Descrição: </strong><%= munition.description %></li>
    </ul>
    <div class="card-block">
      <%= link_to edit_reserf_garrison_munition_path(@reserve, @garrison, munition), class: "col-md-6" do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %>
      <%= link_to reserf_garrison_munition_path(@reserve, @garrison, munition), method: :delete, data: { confirm: 'Are you sure?' }, class: "col-md-6"  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %>
    </div>
  </div>
<% end %>