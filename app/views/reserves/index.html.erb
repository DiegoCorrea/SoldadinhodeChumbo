<p id="notice"><%= notice %></p>
<h1 class="text-md-center">Lista das Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Descrição</th>
      <th class="text-md-center"><%= link_to new_reserf_path do %><span class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></span><% end %></th>
    </tr>
  </thead>

  <tbody>
    <% @reserves.each do |reserf| %>
      <tr>
        <td><%= reserf.initials %></td>
        <td><%= reserf.description %></td>
        <td>
          <%= link_to reserf do %><div class="btn btn-info"><i class="fa fa-info" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to edit_reserf_path(reserf) do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to reserf_path(reserf), method: :delete, data: { confirm: 'Are you sure?' }  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
