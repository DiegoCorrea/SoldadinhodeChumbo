<p id="notice"><%= notice %></p>
<h1 class="text-md-center">Lista das Reservas</h1>
<br>
<div class="col-md-2"></div>
<div class="col-md-8 col-md-offset-2">
  <div class="text-md-right"><%= link_to new_reserf_path do %><span class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></span><% end %></div>
  <% @reserves.each do |reserf| %>
    <div class="col-md-4">
      <div class="row text-md-center"><%= reserf.initials %></div>
      <div class="row text-md-justify"><%= reserf.description %></div>
      <div class="row">
        <div class="col-md-4"><%= link_to reserf do %><div class="btn btn-info"><i class="fa fa-info" aria-hidden="true"></i></div><% end %></div>
        <div class="col-md-4"><%= link_to edit_reserf_path(reserf) do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %></div>
        <div class="col-md-4"><%= link_to reserf_path(reserf), method: :delete, data: { confirm: 'Are you sure?' }  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %></div>
      </div>
    </div>
  <% end %>
</div>