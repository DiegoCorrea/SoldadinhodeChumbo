<p id="notice"><%= notice %></p>
</br>
<div class="col-md-6">
  <%= link_to reserves_path do%>
    <p>
      <div class="btn"><i class="fa fa-backward" aria-hidden="true"></i></div>
      <span>Lista de Reservas</span>
    </p>
  <% end %>
</div>
<div class="col-md-6">
  <%= link_to reserf_garrisons_path(@reserve) do%>
    <p>
      <span>Guarnição</span><div class="btn"><i class="fa fa-forward" aria-hidden="true"></i></div>
    </p>
  <% end %>
</div>
<p>
  <strong>Sigla:</strong>
  <%= @reserve.initials %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @reserve.description %>
</p>

<h3>Todos os Soldados da reserva </h3>

<table>
  <thead>
    <tr>
      <th>Função</th>
      <th>Nome de Guerra</th>
      <th class="text-md-center"><%= link_to new_reserf_soldier_path(@reserve) do %><span class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></span><% end %></th>
    </tr>
  </thead>

  <tbody>
    <% @soldiers.each do |soldier| %>
      <tr>
        <td><%= soldier.function %></td>
        <td><%= soldier.warName %></td>
        <td>
          <%= link_to reserf_soldier_path(@reserve, soldier) do %><div class="btn btn-info"><i class="fa fa-info" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to edit_reserf_soldier_path(@reserve, soldier) do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to reserf_soldier_path(@reserve, soldier), method: :delete, data: { confirm: 'Are you sure?' }  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>