<p id="notice"><%= notice %></p>

<h1>Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Serialnumber</th>
      <th>Model</th>
      <th>Factory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.serialNumber %></td>
        <td><%= weapon.model %></td>
        <td><%= weapon.factory %></td>
        <td>
          <%= link_to reserf_garrison_weapon_path(@reserve, weapon) do %><div class="btn btn-info"><i class="fa fa-info" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to edit_reserf_garrison_weapon(@reserve, weapon) do %><div class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div><% end %>
        </td>
        <td>
          <%= link_to reserf_garrison_weapon_path(@reserve, weapon), method: :delete, data: { confirm: 'Are you sure?' }  do %> <div class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  