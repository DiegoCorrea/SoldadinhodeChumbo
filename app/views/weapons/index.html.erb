<p id="notice"><%= notice %></p>

<h1>Listing Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Serialnumber</th>
      <th>Model</th>
      <th>Factory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.serialNumber %></td>
        <td><%= weapon.model %></td>
        <td><%= weapon.factory %></td>
        <td><%= link_to 'Show', weapon %></td>
        <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

